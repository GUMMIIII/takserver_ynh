{
  "id": "takserver",
  "name": "TAK Server",
  "packaging_format": "1.0",
  "description": {
    "en": "Tactical Assault Kit Server (TAK Server) packaged for YunoHost.",
    "de": "Tactical Assault Kit Server (TAK Server) als YunoHost-App."
  },
  "version": "1.0.0~ynh1",
  "url": "https://takserver.example.com",
  "license": "TAK Server Software License Agreement",
  "maintainers": [
    {
      "name": "GUMMIIII",
      "url": "https://github.com/GUMMIIII"
    }
  ],
  "requirements": {
    "yunohost": ">= 12.0.0",
    "debconf": ">= 1.5"
  },
  "arguments": {
  "install": [
    {
  "name": "portal_visibility",
  "type": "select",
  "choices": [
    { "value": "public", "label": "Allen anzeigen" },
    { "value": "admin",  "label": "Nur Admins anzeigen" },
    { "value": "hidden", "label": "Im Portal ausblenden" }
  ],
  "ask": "Wie soll die TAK Server-Kachel im YunoHost-Portal angezeigt werden?"
    },   
    {
      "name": "domain",
      "type": "domain",
      "ask": "Auf welcher Domain soll der TAK Server bereitgestellt werden?"
    },
    {
      "name": "deb_path",
      "type": "path",
      "ask": "Pfad zur .deb Datei des TAK Servers (z.B. /root/takserver.deb)?"
    },
    {
      "name": "country",
      "type": "string",
      "ask": "Ländercode für die Zertifikate (z.B. DE, US, AT)?"
    },
    {
      "name": "state",
      "type": "string",
      "ask": "Bundesland/Region (z.B. Bayern, NRW)?"
    },
    {
      "name": "city",
      "type": "string",
      "ask": "Ort/Stadt (z.B. München)?"
    },
    {
      "name": "org",
      "type": "string",
      "ask": "Organisation (z.B. Bundeswehr)?"
    },
    {
      "name": "organizational_unit",
      "type": "string",
      "ask": "Organisatorische Einheit (optional, z.B. IT-Abteilung)?"
    },
    {
      "name": "ca_name",
      "type": "string",
      "ask": "Name der Root-CA (z.B. TAK-ROOT-CA-01)?"
    },
    {
      "name": "signing_ca_name",
      "type": "string",
      "ask": "Name der Intermediate (Signier-CA, z.B. TAK-ID-CA-01)?"
    }
  ]
}
}
