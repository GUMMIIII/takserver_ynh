{
  "id": "takserver",
  "name": "TAK Server",
  "packaging_format": "1.0",
  "description": {
    "en": "Tactical Assault Kit Server (TAK Server) packaged for YunoHost.",
    "de": "Tactical Assault Kit Server (TAK Server) als YunoHost-App."
  },
  "version": "1.0.0~ynh1",
  "url": "https://takserver.example.com",
  "license": "TAK Server Software License Agreement",
  "maintainers": [
    {
      "name": "GUMMIIII",
      "url": "https://github.com/GUMMIIII"
    }
  ],
  "requirements": {
    "yunohost": ">= 12.0.0",
    "debconf": ">= 1.5"
  },
  "multi_instance": false,
  "services": [
    "nginx",
    "postgresql"
  ],
  "arguments": {
    "install": [
      {
        "name": "domain",
        "type": "domain",
        "ask": {
          "en": "Choose a domain for the TAK Server",
          "de": "Wähle eine Domain für den TAK Server"
        }
      },
      {
        "name": "path",
        "type": "path",
        "ask": {
          "en": "Choose an app path (default: /)",
          "de": "Wähle einen App-Pfad (Standard: /)"
        },
        "default": "/"
      },
      {
        "name": "org",
        "type": "string",
        "ask": {
          "en": "Organization Name (for certificates)",
          "de": "Organisationsname (für Zertifikate)"
        },
        "example": "TAK"
      },
      {
        "name": "ca_name",
        "type": "string",
        "ask": {
          "en": "Name for Root CA",
          "de": "Name der Root-CA"
        },
        "example": "TAK-ROOT-CA-01"
      },
      {
        "name": "signing_ca_name",
        "type": "string",
        "ask": {
          "en": "Name for Signing CA certificate (e.g. for Web Admin)",
          "de": "Name für das Signing-CA-Zertifikat (z.B. für Web Admin)"
        },
        "example": "TAK-ID-CA-01"
      },
      {
        "name": "deb_path",
        "type": "string",
        "ask": {
          "en": "Path to takserver-core .deb package on the server",
          "de": "Pfad zum takserver-core .deb-Paket auf dem Server"
        },
        "example": "/root/takserver-core_5.4-RELEASE19_all.deb"
      },
      {
        "name": "state",
        "type": "string",
        "ask": {
          "en": "State/Province (e.g. BY for Bavaria)",
          "de": "Bundesland (z.B. BY für Bayern)"
        },
        "example": "BY"
      },
      {
        "name": "city",
        "type": "string",
        "ask": {
          "en": "City",
          "de": "Stadt"
        },
        "example": "Munich"
      },
      {
        "name": "organizational_unit",
        "type": "string",
        "ask": {
          "en": "Organizational Unit (e.g. TAK Admins)",
          "de": "Organisationseinheit (z.B. TAK Admins)"
        },
        "example": "TAK"
      }
    ]
  },
  "permissions": {
    "main": {
      "auth_header": "SSO",
      "show_tile": true,
      "allowed": ["admins"],
      "label": {
        "en": "TAK Server",
        "de": "TAK Server"
      }
    }
  }
}
